<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brim.OfferDetails">


    <android.support.v7.widget.CardView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/IMG_Back"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_margin="0dp"
                android:scaleType="center"
                android:onClick="onClick"
                android:padding="0dp"
                android:src="@drawable/ic_icon_back" />

            <com.brim.Font.AxiformaMedium
                android:layout_toRightOf="@+id/IMG_Back"
                android:layout_width="wrap_content"
                android:paddingLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Zara Earning Offer"
                android:textColor="#00C1D5"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/userimg" />

                <com.brim.Font.AxiformaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="ZARA Canada"
                    android:textColor="#414042"
                    android:textSize="17sp" />

                <com.brim.Font.SFNFTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:text="Earn 3x pts when you shop at Zara using this card."
                    android:textColor="#414042"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_icon_time" />

                    <com.brim.Font.AxiformaBook
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="2 days left"
                        android:textAllCaps="true"
                        android:textColor="#4A4A4A"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <com.brim.Font.AxiformaRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="Participating Locations Near Me"
                    android:textColor="#414042" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/map" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_marker" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <com.brim.Font.AxiformaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="341 Queen St W, Toronto, ON M5V 2A4"
                        android:textColor="#414042"
                        android:textSize="12sp" />

                    <com.brim.Font.AxiformaBook
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Queen West"
                        android:textColor="#808080"
                        android:textSize="10sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_marker" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <com.brim.Font.AxiformaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="220 Yonge St, Toronto, ON M5B 2H1"
                        android:textColor="#414042"
                        android:textSize="12sp" />

                    <com.brim.Font.AxiformaBook
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eaton Centre"
                        android:textColor="#808080"
                        android:textSize="10sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_marker" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <com.brim.Font.AxiformaRegular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 Bloor St W, Toronto, ON M4W 3L8"
                        android:textColor="#414042"
                        android:textSize="12sp" />

                    <com.brim.Font.AxiformaBook
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Holt Renfrew Centre"
                        android:textColor="#808080"
                        android:textSize="10sp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:background="#FFFFFF"
                android:paddingRight="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#FFFFFF">

                    <com.brim.Font.SFNFTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Transactions at Zara"
                        android:textAllCaps="true" />


                    <ImageView
                        android:id="@+id/IMG_Right2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="0dp"
                        android:src="@drawable/ic_icon_down_grey" />

                    <com.brim.Font.SFNFTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/IMG_Right2"
                        android:paddingRight="10dp"
                        android:text="Last 90 Days"
                        android:textAllCaps="true" />

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:background="#FFFFFF"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$107.33"
                        android:textColor="#414042"
                        android:textSize="14sp" />

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="161 pts"
                        android:textColor="#414042"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.brim.Font.AxiformaBook
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clothing · March 10"
                        android:textColor="#808080"
                        android:textSize="12sp" />

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="#009DB2"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="2dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$107.33"
                        android:textColor="#414042"
                        android:textSize="14sp" />

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="322 pts"
                        android:textColor="#414042"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.brim.Font.AxiformaBook
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today"
                        android:textColor="#808080"
                        android:textSize="12sp" />

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="3x"
                        android:textColor="#009DB2"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:background="#FFFFFF"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$107.33"
                        android:textColor="#414042"
                        android:textSize="14sp" />

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="161 pts"
                        android:textColor="#414042"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.brim.Font.AxiformaBook
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CClothing · Feb 15"
                        android:textColor="#808080"
                        android:textSize="12sp" />

                    <com.brim.Font.AxiformaMedium
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text=""
                        android:textColor="#009DB2"
                        android:textSize="12sp" />

                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        </LinearLayout>


    </ScrollView>


</RelativeLayout>
