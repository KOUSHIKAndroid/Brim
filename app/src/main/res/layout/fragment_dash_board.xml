<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

   >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <!--<android.support.v4.view.ViewPager-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:id="@+id/Top_Pager"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="360dp">-->
        <!--</android.support.v4.view.ViewPager>-->

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.brim.Font.AxiformaBook
                    android:id="@+id/TXT_Balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5,147.32"
                    android:textColor="#414042"
                    android:textSize="20sp" />

                <com.brim.Font.AxiformaBook
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TXT_Balance"
                    android:text="Current Balance"
                    android:textSize="13sp"
                    android:textColor="#979797"
                    app:textAllCaps="true" />

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="#00C6D8"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_icon_pay" />

                        <com.brim.Font.AxiformaMedium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="Make Payment"
                            android:textColor="#FFFFFF"
                            android:textSize="15sp" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp">

                <com.brim.Font.AxiformaBook
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available Credit"
                    android:textColor="#414042"
                    android:textSize="17sp" />

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/TXT_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="5dp"
                    android:text="$2,352.68"
                    android:textColor="#414042"
                    android:textSize="17sp" />

                <com.brim.Font.AxiformaRegular
                    android:id="@+id/TXT_Limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/TXT_1"
                    android:textColor="#979797"
                    android:textSize="13sp"
                    android:text="limit $7,500" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp">

                <com.brim.Font.AxiformaBook
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum Payment"
                    android:textColor="#414042"
                    android:textSize="17sp" />

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/TXT_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="5dp"
                    android:text="$0.00"
                    android:textColor="#414042"
                    android:textSize="17sp" />

                <com.brim.Font.AxiformaRegular
                    android:id="@+id/TXT_Min_Pay_Due_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/TXT_2"
                    android:textColor="#979797"
                    android:textSize="13sp"
                    android:text="due May 22, 2017" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp">

                <com.brim.Font.AxiformaBook
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Payment"
                    android:textColor="#414042"
                    android:textSize="17sp" />

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/TXT_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="5dp"
                    android:text="$1,520.00"
                    android:textColor="#414042"
                    android:textSize="17sp" />

                <com.brim.Font.AxiformaRegular
                    android:id="@+id/TXT_LAST_PAID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/TXT_3"
                    android:textColor="#979797"
                    android:textSize="13sp"
                    android:text="paid April 20, 2017" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp">

                <com.brim.Font.AxiformaBook
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rewards Balance"
                    android:textColor="#414042"
                    android:textSize="17sp" />

                <com.brim.Font.AxiformaMedium
                    android:id="@+id/TXT_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="5dp"
                    android:text="57,485 pts"
                    android:textColor="#414042"
                    android:textSize="17sp" />

                <com.brim.Font.AxiformaRegular
                    android:id="@+id/TXT_PointL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/TXT_4"
                    android:textColor="#979797"
                    android:textSize="13sp"
                    android:text="$574.85" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Page_indicator"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_height="40dp">

                <com.brim.Font.AxiformaRegular
                    android:layout_width="wrap_content"
                    android:text="Offers &amp; Insights"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:textColor="#979797"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/IMG_Right"

                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_icon_caret_grey"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content" />
                <com.brim.Font.AxiformaRegular
                    android:text="View"
                    android:paddingRight="5dp"
                    android:layout_centerVertical="true"
                    android:textAllCaps="true"
                    android:textColor="#979797"

                    android:layout_toLeftOf="@+id/IMG_Right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="2dp"
                android:id="@+id/list_item"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#FFF"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#FFFFFF"
                android:layout_height="40dp">

                <com.brim.Font.SFNFTextView
                    android:layout_width="wrap_content"
                    android:text="Recent Transactions"
                    android:textAllCaps="true"
                    android:paddingLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/IMG_Right2"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_icon_caret_grey"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content" />
                <com.brim.Font.SFNFTextView
                    android:text="View"
                    android:paddingRight="5dp"
                    android:layout_centerVertical="true"
                    android:textAllCaps="true"
                    android:layout_toLeftOf="@+id/IMG_Right2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="2dp"
                android:id="@+id/Rec_Recent_Transcation"
                android:layout_width="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>


    </LinearLayout>



</android.support.v4.widget.NestedScrollView>

